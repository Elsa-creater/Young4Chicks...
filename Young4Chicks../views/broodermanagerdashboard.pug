extends layout

block content
  .container.mt-5
    h2.text-center.mb-4 🐣 Brooder Manager Dashboard
    p.text-center Welcome #{manager.fullname}
    ul
      li 📦 Manage chick stock
      li ✅ Approve or reject requests
      li 📊 View request statistics
    a.btn.btn-primary.mt-4(href=`/managestock/${manager._id}`) Manage Stock
    a.btn.btn-success.mt-4.ms-2(href=`/approverequests/${manager._id}`) Approve Requests
    a.btn.btn-info.mt-4.ms-2(href=`/viewstats/${manager._id}`) View Statistics
    a.btn.btn-danger.mt-4.ms-2(href='/logout') Logout
    