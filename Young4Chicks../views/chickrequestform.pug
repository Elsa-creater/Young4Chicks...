extends layout 
block content 
    header
        meta(charset='UTF-8')
        title Chicks Request Form
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
        link(rel="stylesheet", href="css/style.css")
        .form-container
        h2.form-title Chicks Request Form
        form#requestform(action="/chickrequestform" method="POST")
            .mb-3
            label.form-label(for='fullName') Full Name
            input#fullName.form-control(type='text' name='fullname' placeholder='Enter your full name' required='')
            .mb-3
            label.form-label(for='email') Email Address
            input#email.form-control(type='email' name='email' placeholder='Enter your email address' required='')
            .mb-3
            label.form-label(for='phonenumber') Phone Number
            input#phoneNumber.form-control(type='tel' name='phonenumber' placeholder='+256...' required='')
            .mb-3
            label.form-label(for='deliverylocation') Delivery Location
            input#location.form-control(type='text' name='deliverylocation' placeholder='District or village' required='')
            .mb-3
            label.form-label(for='chicktype') Chick Type
            select#chickType.form-select(name='chicktype' required='')
                option(value='') --select chick type--
                option(value='Broilers') Broilers
                option(value='Layers') Layers
                option(value='Local') Local (Indigenous)
            .mb-3
            label.form-label(for='typeofFarmer') Type of Farmer
            select#typeoffarmer.form-select(type='text' name='typeoffarmer' required='')
                option(value='') --select type of farmer--
                option(value='New Farmer') New Farmer
                option(value='Returning Farmer') Returning Farmer
            .mb-3
            label.form-label(for='quantity') Quantity (100-500)
            input#quantity.form-control(type='number' name='quantity' placeholder='Enter number of chicks:new farmer max=100 Returning farmer max=500' required)
            .mb-3
            label.form-label(for='dateofOrder') Date of Order
            input#dateoforder.form-control(type='date' name='dateoforder' placeholder='Select Date of Order' required)
            .mb-3
            label.form-label(for='preferreddeliverydate') Preferred Delivery Date
            input#preferreddeliverydate.form-control(type='date' name='preferreddeliverydate' placeholder='Select preferred delivery date' required)
            .mb-3   
            label.form-label(for='additionalnotes') Additional Notes (optional)
            textarea#additionalnotes.form-control(rows='3' name='additionalnotes' placeholder='Anything else we should know?' optional='')
            .d-grid
            button.btn.btn-custom(type='submit') Submit
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')