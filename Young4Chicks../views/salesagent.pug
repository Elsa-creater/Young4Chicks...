doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sales Agents Registration Forms
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='style.css')

.container.my-5
  h2.text-center.mb-4 Sales Agent Registration Forms
  .card.mb-4
    .card-header.bg-success.text-white
      h4 Sales Agent Registration
    .card-body
      form#salesagent(action='/salesagent' method='POST')
        .mb-3
          label.form-label Full Name
          input.form-control(type='text' name='fullname' placeholder='sales Agent Name' required='')
        .mb-3
          label.form-label Phone Number
          input.form-control(type='tel' name='phonenumber' placeholder='+256...' required='')
        .mb-3
          label.form-label NIN (National ID Number)
          input.form-control(type='text' name='nin' placeholder='e.g. NIN...' required='')
        .mb-3
          label.form-label Email Address
          input.form-control(type='email' name='email' placeholder='e.g. example@example.com' required='')
        .mb-3
          label.form-label Assigned Area
          input.form-control(type='text' name='assignedarea' placeholder='Region, District, etc.' required='')
        button.btn.btn-success(type='submit') Register Sales Agent
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')

