extends layout
block content
  .container.mt-5
    h2.text-center.mb-4 🌾 Youth Farmer Dashboard
    p.text-center Welcome to your dashboard. You can:
    ul
      li 🐣 Request chicks
      li 📄 View request status
      li 📞 Contact your sales agent
    a.btn.btn-primary.mt-4(href="/chickrequestform") Chick Request Form
    a.btn.btn-secondary.mt-4(href="/viewrequests") View My Requests
    a.btn.btn-info.mt-4(href="/salesagent") Contact Sales Agent
    a.btn.btn-danger.mt-4(href="/logout") Logout
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
  script.
    // Basic logout functionality
    document.querySelector("a[href='/logout']").addEventListener("click", (e) => {
      e.preventDefault();
      localStorage.clear();
      window.location.href = "/login";
    });
  script(src='https://cdn.jsdelivr.net/npm/sweetalert2@11')
  script.