//- registration.pug
extends layout

block content
  h1.text-center.mt-4 Young4ChickS Registration

   //- Tabs
   ul.nav.nav-tabs
    li.nav-item
      a.nav-link.active(href="#youthfarmer", data-bs-toggle="tab") Youth Farmer
    li.nav-item
      a.nav-link(href="#salesagent", data-bs-toggle="tab") Sales Agent
    li.nav-item
      a.nav-link(href="#broodermanager", data-bs-toggle="tab") Brooder Manager

  //- Tab content
  .tab-content.mt-3
    //- Youth Farmer Form
    .tab-pane.fade.show.active#youthfarmer
      form(action="/register" method="POST")
        input(type="hidden" name="role" value="youth_farmer")
        .mb-3
          label.form-label Full Name
          input.form-control(type="text" name="fullname" placeholder="Enter full name" required)
        .mb-3
          label.form-label Email Address
          input.form-control(type="email" name="email" placeholder="Enter email" required)
        .mb-3
          label.form-label Phone Number
          input.form-control(type="tel" name="phonenumber" placeholder="+256..." required)
        .mb-3
          label.form-label Age Group
          input.form-control(type="text" name="agegroup" placeholder="18-30" required)
        .mb-3
          label.form-label NIN (National ID Number)
          input.form-control(type="text" name="nin" placeholder="Enter NIN" required)
        .mb-3
          label.form-label Name of Business
          input.form-control(type="text" name="nameofbusiness" placeholder="Business name" required)
        .mb-3
          label.form-label Location
          input.form-control(type="text" name="location" placeholder="District/Town" required)
        .mb-3
          label.form-label Password
          input.form-control(type="password" name="password" required)
        button.btn.btn-primary(type="submit") Register Youth Farmer
         hr
         a(href="/loginpage") Go to Login Page

    //- Sales Agent Form
    .tab-pane.fade#salesagent
      form(action="/register" method="POST")
        input(type="hidden" name="role" value="sales_agent")
        .mb-3
          label.form-label Full Name
          input.form-control(type="text" name="fullname" placeholder="Sales Agent Name" required)
        .mb-3
          label.form-label Phone Number
          input.form-control(type="tel" name="phonenumber" placeholder="+256..." required)
        .mb-3
          label.form-label NIN
          input.form-control(type="text" name="nin" placeholder="Enter NIN" required)
        .mb-3
          label.form-label Email
          input.form-control(type="email" name="email" placeholder="Enter email" required)
        .mb-3
          label.form-label Assigned Area
          input.form-control(type="text" name="assignedarea" placeholder="Region/District" required)
        .mb-3
          label.form-label Password
          input.form-control(type="password" name="password" required)
        button.btn.btn-success(type="submit") Register Sales Agent
         hr
         a(href="/loginpage") Go to Login Page

    //- Brooder Manager Form
    .tab-pane.fade#broodermanager
      form(action="/register" method="POST")
        input(type="hidden" name="role" value="brooder_manager")
        .mb-3
          label.form-label Full Name
          input.form-control(type="text" name="fullname" placeholder="Enter full name" required)
        .mb-3
          label.form-label NIN (National ID Number)
          input.form-control(type="text" name="nin" placeholder="Enter NIN" required)
        .mb-3
          label.form-label Phone Number
          input.form-control(type="tel" name="phonenumber" placeholder="Enter phone number" required)
        .mb-3
          label.form-label Email
          input.form-control(type="email" name="email" placeholder="Enter email" required)
        .mb-3
          label.form-label Password
          input.form-control(type="password" name="password" required)
        button.btn.btn-warning(type="submit") Register Brooder Manager

         hr
         a(href="/loginpage") Go to Login Page

        //- Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
