extends layout

block content
  .container.mt-5
    h2.text-center.mb-4 ðŸŒ¾ My Chick Requests
    if requests.length
      table.table.table-striped
        thead
          tr
            th # 
            th Chick Type
            th Quantity
            th Order Date
            th Preferred Delivery
            th Status
            th Additional Notes
        tbody
          each request, index in requests
            tr
              td #{index + 1}
              td #{request.chicktype}
              td #{request.quantity}
              td #{request.dateoforder.toDateString()}
              td #{request.preferreddeliverydate.toDateString()}
              td #{request.status}
              td #{request.additionalnotes || 'N/A'}
    else
      p.text-center You have no chick requests yet.
    a.btn.btn-primary.mt-4(href='/chickrequestform/#{userId}') Request More Chicks
    a.btn.btn-danger.mt-4.ms-2(href='/logout') Logout