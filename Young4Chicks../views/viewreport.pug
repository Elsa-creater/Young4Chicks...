extends layout

block content
  .container.mt-5
    h2.text-center.mb-4 ðŸ“Š Chick Requests

    if requests.length > 0
      table.table.table-striped
        thead
          tr
            th #
            th Farmer Name
            th Chick Type
            th Quantity
            th Order Date
            th Preferred Delivery
            th Status
        tbody
          each request, index in requests
            tr
              td #{index + 1}
              td #{request.farmerName}
              td #{request.chicktype}
              td #{request.quantity}
              td #{request.dateoforder.toDateString()}
              td #{request.preferreddeliverydate.toDateString()}
              td #{request.status}
    else
      p.text-center No requests found.